@model IEnumerable<EmployeeDetailsDto>
@{
    ViewData["Title"] = "Employees";
}

<!-- ✅ Success Toast -->
@if (!string.IsNullOrEmpty(TempData["Success"] as string))
{
    <div class="toast-container position-fixed p-3 bottom-0 end-0" style="z-index: 2000;">
        <div class="toast fade show border-success shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success text-white">
                <i class="fas fa-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
                <small>Just now</small>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">@TempData["Success"]</div>
        </div>
    </div>
}

<!-- ❌ Error Toast -->
@if (!string.IsNullOrEmpty(TempData["Error"] as string))
{
    <div class="toast-container position-fixed p-3 bottom-0 end-0" style="z-index: 2000;">
        <div class="toast fade show border-danger shadow-lg" role="alert">
            <div class="toast-header bg-danger text-white">
                <i class="fas fa-times-circle me-2"></i>
                <strong class="me-auto">Error</strong>
                <small>Just now</small>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">@TempData["Error"]</div>
        </div>
    </div>
}

<section class="container mt-4">

    <!-- Header + Create Button -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-2">
        <h3 class="d-flex align-items-center gap-2 text-primary">
            <i class="fa-solid fa-users"></i> All Employees
        </h3>
        <a class="btn btn-success d-flex align-items-center gap-1 shadow-sm" asp-action="Create">
            <i class="fa-solid fa-plus"></i> Create Employee
        </a>
    </div>

    <!-- Search Form -->
    <div class="card shadow-sm mb-4 border-0 rounded-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-2">
                <div class="col-md-9">
                    <input class="form-control border-primary" type="text" name="EmployeeSearchName"
                           placeholder="🔍 Search Employee by Name" />
                </div>
                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-1">
                        <i class="fa-solid fa-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Employee Table -->
    @if (Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle text-center mb-0">
                <thead class="table-primary text-white">
                    <tr>
                        <th>@Html.DisplayNameFor(e => e.Name)</th>
                        <th>@Html.DisplayNameFor(e => e.Department)</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    @foreach (var employee in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold text-dark">@employee.Name</td>
                            <td>@employee.Department</td>
                            <!-- Buttons Partial -->
                            @* <partial name="ButtonsPartialView" model="employee.Id" /> *@

                            <!-- Delete Modal -->
                            <div class="modal fade" id="DeleteModal-@employee.Id" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content shadow">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">
                                                <i class="fa-solid fa-triangle-exclamation"></i> Delete Employee
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete <strong>@employee.Name</strong>?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <form asp-action="Delete" asp-route-id="@employee.Id" method="post">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow-sm rounded">
            <i class="fa-solid fa-circle-info"></i> No Employees Found!
        </div>
    }
</section>
